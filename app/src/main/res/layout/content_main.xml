<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <Button
        android:id="@+id/healthbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="500dp"
        android:background="@drawable/round_corner"
        android:text="Health Empowerment"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment" />

    <Button
        android:id="@+id/financialbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Financial and Wealth"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="420dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        android:background="@drawable/round_corner"
        />

    <Button
        android:id="@+id/educationbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Education - STEAM"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="340dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        android:background="@drawable/round_corner"
        />

    <Button
        android:id="@+id/communitybtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Community Service"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/nav_host_fragment"
        app:layout_constraintStart_toStartOf="@id/nav_host_fragment"
        android:background="@drawable/round_corner"
        />



</androidx.constraintlayout.widget.ConstraintLayout>